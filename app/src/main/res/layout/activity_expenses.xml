<?xml version="1.0" encoding="utf-8"?>

<!-- activity_expenses.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.UniWallet">

    <include layout="@layout/header"/>

    <TextView
        style="@style/TextViewStyle"
        android:id="@+id/expenses_header_text"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@id/header_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:text="Expenses"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/balanceButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:text="Balance"
        style="@style/ButtonStyle"
        android:layout_below="@id/expenses_header_text"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/balanceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="balance text"
        android:layout_below="@id/balanceButton"/>

    <TextView
        android:id="@+id/budgetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="budget text"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/budgetButton"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/budgetButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:text="Budget"
        android:layout_alignParentEnd="true"
        style="@style/ButtonStyle"
        android:layout_below="@id/expenses_header_text"
        android:layout_marginTop="80dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/change_budgetButton"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:text="Change Budget"
        android:layout_alignParentEnd="true"
        style="@style/MinorButtonStyle"
        android:layout_below="@id/budgetButton"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/ChangeBudgetField"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@id/balanceTextView"
        android:hint="Enter New Budget%"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/AddAmountField"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_below="@id/ChangeBudgetField"
        android:hint="Add New Amount$"
        android:inputType="numberDecimal" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_amountButton"
        style="@style/MinorButtonStyle"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/change_budgetButton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:text="Add Extra" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_paycheck_button"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:text="Add Paycheck"
        android:layout_alignParentEnd="true"
        style="@style/MinorButtonStyle"
        android:layout_below="@id/add_amountButton"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/utility_cost_button"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:text="add utility"
        android:layout_alignParentEnd="true"
        style="@style/MinorButtonStyle"
        android:layout_below="@id/add_paycheck_button"
        android:layout_marginTop="20dp"/>

   <ScrollView
       android:id="@+id/quick_add_scroll"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       />

    <!-- Repeat similar elements for other buttons -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/generateBalanceButton"
        style="@style/ButtonStyle"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/utility_cost_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Generate Balance" />

    <Spinner
        android:id="@+id/expenseTypeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AddAmountField"
        android:layout_marginTop="20dp" />
</RelativeLayout>