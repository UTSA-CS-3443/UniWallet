<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A67DB8">

    <TextView
        android:id="@+id/tvUniWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UniWallet"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/balanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance"
        style="?android:borderlessButtonStyle"
        android:layout_below="@id/tvUniWallet"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/budgetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget"
        style="?android:borderlessButtonStyle"
        android:layout_below="@id/balanceButton"
        android:layout_marginTop="20dp"/>

    <!-- Repeat similar elements for other buttons -->

    <Button
        android:id="@+id/generateBalanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Balance"
        android:style="?attr/buttonBarButtonStyle"
        android:layout_centerInParent="true"/>
</RelativeLayout>