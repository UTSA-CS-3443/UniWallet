<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A67DB8">

    <TextView
        android:id="@+id/tvUniWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UniWallet"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvUniWallet"
        android:src="@drawable/uniwallet_logo" />

    <Button
        android:id="@+id/graphsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graphs"
        android:layout_below="@id/logo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/incomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Income"
        android:layout_below="@id/logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/initialBalanceField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Initial Balance"
        android:inputType="numberDecimal"
        android:layout_below="@id/graphsButton"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/initialBudgetField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Initial Budget"
        android:inputType="numberDecimal"
        android:layout_below="@id/initialBalanceField"
        android:layout_marginTop="10dp"/>
</RelativeLayout>